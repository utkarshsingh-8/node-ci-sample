{
  "name": "node-ci-sample",
  "version": "1.0.0",
  "description": "Minimal Node.js app to demonstrate GitHub Actions CI/CD",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "NODE_ENV=development node src/index.js",
    "test": "jest",
