  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.50.0",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "lint-staged": "^16.2.6",
    "supertest": "^6.3.0"
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "engines": {
    "node": ">=16 <=20"
  }
}
